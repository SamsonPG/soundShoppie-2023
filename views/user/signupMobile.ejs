<%- include('../layout/partials/userHeader') -%>
<div class="d-flex justify-content-center align-items-center flex-column mt-5">
  <div
    class="d-flex justify-content-center align-items-center flex-column mt-5"
  >
    <div class="add-product">
      <form
        class="card-body form"
        id="signupForm"
        action="/sendOTPSignup"
        method="post"
        onsubmit="return validateSignUpForm7()"
      >
        <h3 class="card-title">Sign Up</h3>
        <!-- <a class="hidden-signup ml-5 mt-1 mb-0" href="/signup."
          >Classic Sign Up !
        </a> -->

        <div class="mb-3">
          <label for="name" class="card-title">Name</label>
          <input
            class="form-control card-title input"
            type="text"
            id="name"
            name="name"
            autocomplete="off"
            placeholder="Name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="card-title">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control card-title input"
            autocomplete="off"
            placeholder="E-Mail I.D."
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="card-title">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control card-title input"
            autocomplete="off"
            placeholder="Password"
            required
          />
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="card-title"
            >Confirm Password</label
          >
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            class="form-control card-title input"
            autocomplete="off"
            placeholder="Confirm Password"
            required
          />
        </div>
        <div class="mb-3">
          <label for="mobile" class="card-title">Mobile</label>
          <input
            type="text"
            id="mobile"
            name="mobile"
            class="form-control card-title input"
            autocomplete="off"
            placeholder="Mobile"
            required
          />
        </div>

        <% if (locals.msg) { %>
        <div id="msgs" class="alert alert-danger text-center"><%= msg %></div>
        <% } %>
        <button
          type="submit"
          class="btn btn-primary card-details-btn border-0"
          style="width: 100%"
        >
          Submit
        </button>
        <a class="mt-5" href="/login">Already a User? Login</a>
      </form>
    </div>
    <div class="add-product">
      <div class="m-3">
        <a href="/signup.">Have problem with OTP? Classic Sign Up! </a>
      </div>
    </div>

    <script>
      function validateSignUpForm7() {
        const nameInput = document.getElementById("name");
        const emailInput = document.getElementById("email");
        const passwordInput = document.getElementById("password");
        const confirmPasswordInput = document.getElementById("confirmPassword");
        const mobileInput = document.getElementById("mobile");

        if (nameInput.value === "") {
          alert("Please enter your name.");
          nameInput.focus();
          return false;
        }

        if (emailInput.value === "") {
          alert("Please enter your email.");
          emailInput.focus();
          return false;
        }

        if (passwordInput.value === "") {
          alert("Please enter a password.");
          passwordInput.focus();
          return false;
        }

        if (confirmPasswordInput.value === "") {
          alert("Please confirm your password.");
          confirmPasswordInput.focus();
          return false;
        }

        if (passwordInput.value !== confirmPasswordInput.value) {
          alert("Passwords do not match.");
          confirmPasswordInput.focus();
          return false;
        }

        if (mobileInput.value === "") {
          alert("Please enter your mobile number.");
          mobileInput.focus();
          return false;
        }

        return true;
      }
    </script>
  </div>
</div>
<%- include('../layout/partials/userFooter') -%>
