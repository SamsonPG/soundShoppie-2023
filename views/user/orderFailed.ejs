<%- include('../layout/partials/userHeader') -%>

<div class="d-flex justify-content-center align-items-center flex-column mt-5">
  <div
    class="d-flex justify-content-center align-items-center flex-column mt-5"
  >
    <div class="add-product">
      <div class="card-body form">
        <h3 class="card-title">Order Failed!</h3>
        <div class="text-center m-5">
          <img
            src="/public/images/cross.png"
            alt="Green Tick Icon"
            width="80px"
            class="tick-icon"
          />
        </div>
        <div class="mt-3 text-center">
          <p>Hi <%= locals.user.name %> , Your last order has been failed. Please try again, or try another payment.
            </p>
            <a
              href="/userHome"
              class="btn btn-primary card-details-btn border-0"
              style="width: 100%"
              >Go to Home</a
            >
            <a
            href="/user/oders/<%= user._id %>"
              class="btn btn-primary card-details-btn border-0"
              style="width: 100%"
              >View Orders</a
            >
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../layout/partials/userFooter') -%>
