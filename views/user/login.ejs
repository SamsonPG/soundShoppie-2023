<%-include('../layout/partials/userHeader')-%>
<div class="d-flex justify-content-center align-items-center flex-column mt-5">
  <div
    class="d-flex justify-content-center align-items-center flex-column mt-5"
  >
    <div class="add-product">
      <form
        class="card-body form"
        id="loginForm"
        action="/login"
        method="post"
        onsubmit="return validateSignUpForm()"
      >
        <h3 class="card-title">Login</h3>
        <div class="mb-3">
          <label for="email" class="card-title">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control card-title input"
            autocomplete="off"
            placeholder="E-Mail I.D."
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="card-title">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control card-title input"
            autocomplete="off"
            placeholder="Password"
            required
          />
          <a class="mt-3" href="/loginForgotPassword">Forgot Password?</a><br />
        </div>
        <% if(locals.msg){ %>
        <div id="msgs" class="alert alert-danger text-center"><%= msg %></div>
        <% } %>
        <button
          type="submit"
          class="btn btn-primary card-details-btn border-0 mb-3"
          style="width: 100%"
        >
          Submit</button
        ><a class="mt-3" href="/mobilelogin">Login With Mobile</a><br />

        <a class="mt-5" href="/signupMobile">New User? Sign Up</a>
      </form>
    </div>
  </div>
</div>
<%-include('../layout/partials/userFooter')-%>
