    if (email === "") {
      alert("Email must be filled");
      return false;
    } else {
      var emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
      if (!emailRegex.test(email)) {
        alert("Invalid email address");
