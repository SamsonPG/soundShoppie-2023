<%-include('../layout/partials/adminHeader')-%>
<div class="d-flex justify-content-center align-items-center flex-column mt-5">
  <div class="add-product">
    <form
      class="card-body form"
      id="updateCategoryForm"
      action="/admin/category/update/<%= category._id %>"
      method="post"
    >
      <h3 class="card-title">Update Category</h3>
      <div class="mb-3">
        <label for="name" class="card-title">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Enter category name (no numbers)"
          required
          value="<%= category.name %>"
        />
      </div>
      <div class="mb-3">
        <label for="offerPrice" class="card-title">Offer Percentage</label>
        <input
          type="number"
          id="offerpercentage"
          name="offerpercentage"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Offer Percentage"
          value="<%= category.offerpercentage %>"
          min="0"
          max="10"
          step="0.01"
        />
      </div>
      <div class="mb-3">
        <label for="status" class="card-title">Offer Status</label>
        <select id="status" name="status" class="form-control card-title input" required>
          <option value="active" <% if (category.status === 'active') { %>selected<% } %>>Active</option>
          <option value="inactive" <% if (category.status === 'inactive') { %>selected<% } %>>Inactive</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="description" class="card-title">Description</label>
        <input
          type="text"
          id="description"
          name="description"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Enter category description"
          required
          value="<%= category.description %>"
        />
      </div>
      <% if(locals.msg){ %>
      <div id="msgs" class="alert alert-danger text-center"><%= msg %></div>
      <% } %>
      <button
        type="submit"
        class="btn btn-primary card-details-btn border-0"
        style="width: 100%"
      >
        Update Category
      </button>
    </form>
  </div>
</div>
<%-include('../layout/partials/adminFooter')-%>
