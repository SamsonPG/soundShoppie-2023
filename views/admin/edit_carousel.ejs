<%- include('../layout/partials/adminHeader') -%>
<div class="d-flex justify-content-center align-items-center flex-column mt-5">
  <div class="add-product">
    <form class="card-body form" id="updateCarouselForm" action="/admin/carousel/update/<%= carousel._id %>" method="post"  onsubmit="return validateUpdateProductForm()">

      <h3 class="card-title">Update Carousel</h3>
      <div class="mb-3">
        <label for="heading" class="card-title">Heading</label>
        <input
          type="text"
          id="heading"
          name="heading"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Enter carousel heading"
          value="<%= carousel.heading %>"
          required
          
        />
      </div>
      <div class="mb-3">
        <label for="subHeading" class="card-title">Sub Heading</label>
        <input
          type="text"
          id="subHeading"
          name="subHeading"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Enter carousel sub heading" 
          value="<%= carousel.subHeading %>"
          required
         
        />
      </div>
   
      <div class="form-group">
        <label for="carouselStatus" class="card-title">Carousel Status</label>
        <select id="carouselstatus" name="carouselstatus" class="form-control card-title input" required>

          <option value="active" <% if (carousel.carouselstatus === 'active') { %>selected<% } %>>Active</option>
          <option value="inactive" <% if (carousel.carouselstatus === 'inactive') { %>selected<% } %>>Inactive</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="images" class="card-title">Images</label>
        <input
          type="file"
          id="images"
          name="images"
          class="form-control card-title input"
          accept="image/*"
          multiple
        />
      </div>
      <div class="mb-3">
        <label for="deleteImages" class="card-title">Delete Images</label>
        <% carousel.images.forEach(function(image) { %>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            id="<%= image %>"
            name="deleteImages"
            value="<%= image %>"
          />
          <label class="form-check-label" for="<%= image %>">
            <%= image %>
          </label>
        </div>
        <% }) %>
      </div>
      <% if (message) { %>
      <div id="msgs" class="alert alert-danger text-center">
        <%= message.message %>
      </div>
      <% } %>
      <button
        type="submit"
        class="btn btn-primary card-details-btn border-0"
        style="width: 100%"
      >
        Update Carousel
      </button>
    </form>
  </div>
</div>
<%- include('../layout/partials/adminFooter') -%>
