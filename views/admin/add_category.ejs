<%- include('../layout/partials/adminHeader') -%>
<div class="d-flex justify-content-center align-items-center flex-column mt-5">
  <div class="add-product">
    <form
      class="card-body form"
      id="createCategoryForm"
      action="/admin/category/add"
      method="post"
    >
      <h3 class="card-title">Create Category</h3>
      <div class="mb-3">
        <label for="name" class="card-title">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Enter category name (no numbers)"
          required
        />
      </div>
      <div class="mb-3">
        <label for="offerpercentage" class="card-title">Offer Percentage</label>
        <input
          type="number"
          id="offerpercentage"
          name="offerpercentage"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Offer Percentage"
          min="0"
          max="10"
          step="0.01"
        />
      </div>
      <div class="form-group">
        <label for="status" class="card-title">Offer Status</label>
        <select
          id="status"
          name="status"
          class="form-control card-title input"
          required
        >
          <option value="active">Active</option>
          <option value="inactive">Inactive</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="description" class="card-title">Description</label>
        <input
          type="text"
          id="description"
          name="description"
          class="form-control card-title input"
          autocomplete="off"
          placeholder="Enter category description"
          required
        />
      </div>
      <% if (message) { %>
      <div id="msgs" class="alert alert-danger text-center">
        <%= message.message %>
      </div>
      <% } %>
      <button
        type="submit"
        class="btn btn-primary card-details-btn border-0"
        style="width: 100%"
      >
        Create Category
      </button>
    </form>
  </div>
</div>
<%- include('../layout/partials/adminFooter') -%>
